<div class="body mb-3 mx-3">
  <div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://plus.unsplash.com/premium_photo-1661883237884-263e8de8869b?fm=jpg&q=60&w=3000&ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxzZWFyY2h8NXx8cmVzdGF1cmFudHxlbnwwfHwwfHx8MA%3D%3D);">
    <div class="container">
      <h1><%= @restaurant.name %></h1>
      <%= link_to "Add a Restaurant", new_restaurant_path, class: "btn btn-primary mt-3" %>
    </div>
  </div>
  <div class="container d-flex justify-content-center">
    <%= render @restaurant, class:"info mt-3" %>
  </div>
  <div>
    <div class="Reviews d-flex justify-content-center mt-3">
      <%= link_to "Add a review", new_restaurant_review_path(@restaurant), class: "btn btn-primary mb-3" %>
    </div>
    <div class="back-home-btn">
      <%= link_to "Back to Home", restaurants_path , class: "btn btn-primary" %>
    </div>
  </div>
  <div class='d-flex justify-content-center '>
    <div class='w-50'>
      <ul class="list-group mx-auto">
        <% @restaurant.reviews.each do |review| %>
          <li class="list-group-item list-group-item-primary text-center">
            <%= review.content %>
            <br>
            <strong>Rating:</strong>
            <% review.rating.times do %>
              <i class="fas fa-star text-info"></i>
            <% end %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
