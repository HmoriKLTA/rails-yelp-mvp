<div class="card-product mt-5">
  <%= image_tag "restaurant_food.jpg", alt: "Restaurant food" %>
  <div class="card-product-infos">
    <div class="container-info text-center">
      <div id="<%= dom_id restaurant %>">
        <p>
          <strong>Name:</strong>
          <%= restaurant.name %>
        </p>
        <p>
          <strong>Address:</strong>
          <%= restaurant.address %>
        </p>
        <p>
          <strong>Phone Number:</strong>
          <%= restaurant.phone_number %>
        </p>
        <p>
          <strong>Category:</strong>
          <%= restaurant.category%>
        </p>
      </div>
    </div>
  </div>
</div>
