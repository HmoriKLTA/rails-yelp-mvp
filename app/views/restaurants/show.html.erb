<div class="body mb-3 mx-3">
  <div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://plus.unsplash.com/premium_photo-1661883237884-263e8de8869b?fm=jpg&q=60&w=3000&ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxzZWFyY2h8NXx8cmVzdGF1cmFudHxlbnwwfHwwfHx8MA%3D%3D);">
    <div class="container">
      <h1><%= @restaurant.name %></h1>
    </div>
  </div>
  <div class="container d-flex justify-content-center">
    <%= render @restaurant, class:"info mt-3" %>
    <div>
      <ul class="list-group">
        <% @restaurant.reviews.each do |review| %>
          <li class="list-group-item">
            <%= review.content %>
            <br>
            <strong>Rating:</strong> <%= review.rating %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
  <div>
    <div class="form mt-3 mx-3 col-md-6 justify-content-center ">
      <div class="Reviews">
        <%= link_to "Add a review", new_restaurant_review_path(@restaurant), class: "btn btn-primary mb-3" %>
      </div>
      <%= link_to "Back to Home", restaurants_path, class: "btn btn-primary"%>
    </div>
    <div class="back-home-btn">
    </div>
  </div>
</div>
